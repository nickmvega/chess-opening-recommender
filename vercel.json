{
  "version": 2,
  "outputDirectory": "frontend",

  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",        
      "config": {
        "runtime": "python3.11",        
        "excludeFiles": "frontend/**"  
      }
    }
  ],

  "routes": [
    { "src": "^/recommend/(.*)$", "dest": "/api/index.py" }
  ]
}
