{
  "version": 2,

  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",
        "excludeFiles": "frontend/data/**"
      }
    }
  ],

  "outputDirectory": "frontend",        

  "routes": [
    { "src": "/recommend/(.*)", "dest": "/api/index.py" },   
    { "handle": "filesystem" },                         
    { "src": "/(.*)", "dest": "/index.html" }                
  ]
}
