{
  "version": 2,

  "builds": [
    { "src": "frontend/index.html", "use": "@vercel/static" },    
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.11",             
        "excludeFiles": "frontend/data/**"    
      }
    }
  ],

  "routes": [
    { "src": "/recommend/(.*)", "dest": "/api/index.py" },         
    { "handle": "filesystem" },                                    
    { "src": "/(.*)", "dest": "/frontend/index.html" }            
  ]
}
