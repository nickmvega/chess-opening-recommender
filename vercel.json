{
  "version": 2,
  "outputDirectory": "frontend",

  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python@3.1.1",
      "memory": 1024,
      "maxDuration": 30,
      "excludeFiles": "{frontend/**,storage/**}" 
    }
  },

  "routes": [
    { "src": "^/recommend/(.*)$", "dest": "/api/index.py" }
  ]
}
