{
  "version": 2,

    "builds": [
    { "src": "frontend/**", "use": "@vercel/static" },   
    {
        "src": "api/index.py",
        "use": "@vercel/python",
        "config": {
        "runtime": "python3.12",
        "excludeFiles": "frontend/data/**"    
        }
    }
    ],
    "routes": [
    { "src": "/data/(.*)", "dest": "/frontend/data/$1" },   
    { "src": "/recommend/(.*)", "dest": "/api/index.py" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
    ]
}
